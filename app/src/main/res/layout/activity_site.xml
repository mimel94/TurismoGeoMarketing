<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SIteActivity"
    android:layout_marginTop="30sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
   app:cardElevation="5sp"
    app:cardCornerRadius="5sp"
    android:id="@+id/cvFinalSite"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txtNombreSiteFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10sp"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imgSiteFinal"
        android:layout_width="match_parent"
        android:layout_height="180sp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_margin="10sp"
        android:scaleType="fitXY"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right">

    <RatingBar

        android:id="@+id/starsSiteFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:numStars="5"
        android:rating="3.0"

        style="?android:attr/ratingBarStyleIndicator"
        android:layout_marginBottom="3sp"
        android:isIndicator="true"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:transformPivotX="0dp"/>

    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:drawableLeft="@drawable/ic_menu_share"
        android:drawablePadding="10sp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTipoSiteFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="5sp"
            android:layout_marginTop="10sp"
            android:text="Tipo:  "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtLugarSiteFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10sp"
            android:text="Ciudad:  "
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtpaySiteFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10sp"
        android:text="Aceptan pagos:  "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtDescriptionSiteFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10sp"
        android:text="DescripciÃ³n: "
        android:textSize="15sp"
        android:inputType="textImeMultiLine"/>


</LinearLayout>


</android.support.v7.widget.CardView>

